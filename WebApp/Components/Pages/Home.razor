@page "/"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<h3>Welcome to the Home Page</h3>

<div class="home-container">
    <button class="btn btn-success" @onclick="NavigateToFileUpload">File Upload</button>
    <button class="btn btn-info ml-2" @onclick="NavigateToLocations">Locations</button>
    <button class="btn btn-danger ml-2" @onclick="Logout">Logout</button>
</div>

@code {
    private void NavigateToFileUpload()
    {
        NavigationManager.NavigateTo("/file-upload");
    }

    private void NavigateToLocations()
    {
        NavigationManager.NavigateTo("/locations");
    }

    private async Task Logout()
    {
        // Clear the token from localStorage
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "authToken");

        // Redirect to Login Page
        NavigationManager.NavigateTo("/login");
    }
}